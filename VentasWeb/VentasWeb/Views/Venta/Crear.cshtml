                                        <div class="form-group mb-0">
                                            <label for="txtRazonSocialProveedor" class="col-form-label col-form-label-sm">Nombre: <span class="required"></span></label>
                                            <input type="text" class="form-control form-control-sm model" readonly id="txtclientenombres" name="RazonSocial" autocomplete="off">
