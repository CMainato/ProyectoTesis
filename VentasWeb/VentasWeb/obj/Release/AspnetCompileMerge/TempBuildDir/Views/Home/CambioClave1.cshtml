@model VentasWeb.Models.USUARIO

@{
    ViewBag.Title = "CambioClave1";
    Layout = "/Views/Shared/_Layout.cshtml";

}
 
<head>
    
    <title>Index</title>
  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
   

    @Styles.Render("~/Content/css")
</head>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Cambiar contraseña</a></li>

            </ol>
        </nav>

        <div class="row">
            <div class="col-sm-12">
                <div class="card border-info">
                    <div class="card-header bg-info text-white">
                        Actaulizar contraseña
                    </div>
                </div>
            </div>
        </div>

        <br />
        <div class="container">
            <div class="row">
                <div class="col">





                    @using (Html.BeginForm("CambioClave1", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                    <div class="box-body">
                        <div class="form-group">
                            <label for="inpuPassword3" class="col-sm-4   ">Contraseña anterior</label>
                            <div class="input-group">
                                @Html.PasswordFor(obj => obj.Clave, new { @class = "form-control", @placeholder = "" })
                                <span class="input-group-append ">
                                    <button id="show_password1" class="btn btn-success" type="button" onclick="ver1()" title="Mostrar Contraseña">
                                        <span class="fa fa-eye-slash  " id="icon1"></span>
                                    </button>
                                </span>
                            </div>
                        </div>

                        <div class="form-group">

                            <label for="inpuPassword3" class="col-md-4 ">Nueva contraseña</label>
                            <div class="input-group">
                                @Html.PasswordFor(obj => obj.newPass, new { @class = "form-control", @placeholder = " " })
                                <span class="input-group-append ">
                                    <button id="show_password2" class="btn btn-success" type="button" onclick="ver2()" title="Mostrar Contraseña">
                                        <span class="fa fa-eye-slash " id="icon2"></span>
                                    </button>

                                </span>


                            </div>
                            
                            <span id="StrengthDisp" class="badge displayBadge">Weak</span>
                        </div>
                         
                        <div class="form-group">
                            <label for="inpuPassword3" class="col-md-6  ">Confirmar contraseña</label>
                            <div class="input-group">
                                @Html.PasswordFor(obj => obj.conPass, new { @class = "form-control", @placeholder = " " })
                                <span class="input-group-append ">
                                    <button id="show_password3" class="btn btn-success" type="button" onclick="ver3()" title="Mostrar Contraseña">
                                        <span class="fa fa-eye-slash " id="icon3"></span>
                                    </button>
                                </span>
                            </div>

                        </div>


                        <div class="box-footer">

                            <div class="box-footer">
                                <button type="submit" class="btn btn-sm btn-primary fa-pull-left">Actualizar </button>
                                <br />

                                <br />
                                <p style="color:#FF0000" ;>  @ViewBag.data</p>
                            </div>
                        </div>

                    </div>
                    }
                </div>
                <div class="col">
                    <img class="d-block w-100" src="@Url.Content("~/Imagenes/cambio.png")" alt="First slide" width="100" height="300">
                </div>
            </div>

        </div>
        <script src="@Url.Content("~/Scripts/Views/CambioPass.js")" type="text/javascript">

        </script>