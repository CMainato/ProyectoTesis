@model VentasWeb.Models.ViewModel.RecoveryViewModel
@{
    ViewBag.Title = "StartRecovery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <div class="form-style">
            <form action="@Url.Content("~/Login/StartRecovery")" method="post">

                <label>Escribe tu correo electrónico</label>
                @Html.TextBoxFor(d => d.Email, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Email, null, new { style = "color:red;" })
                <br />
                <p style="color:#FF0000" ;> @ViewBag.Message</p>
                <div class="text-right">
                    <button class="btn btn-primary">Recuperar</button>
                </div>

            </form>
        </div>
    </div>
</div>

